<?xml version="1.0"?>
<robot name="SimpleArm"  xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="altura_base" value="0.1"/>
  <xacro:property name="largo" value="0.5"/>
  <xacro:property name="ancho" value="0.1"/>
  <xacro:property name="masa" value="2.0"/>

<xacro:macro name="default_inertial" params="mass altoL">
  <inertial>
    <origin xyz="0 0 ${altoL/2}" rpy="0 0 0"/>
    <mass value="${mass}"/>
    <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
  </inertial>
</xacro:macro>


  <link name="link0">
    <visual>
      <origin xyz="0 0 ${altura_base/2}" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 ${altura_base}"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 ${altura_base/2}" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 ${altura_base}"/>
      </geometry>
    </collision>

   <xacro:default_inertial mass="1000" altoL="${altura_base}"/>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </visual>
    <collission>
      <geometry>
         <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </collission>
    <xacro:default_inertial mass="${masa}" altoL="${largo}"/>
  </link>

  <link name="link2">
    <visual>
      <geometry>
        <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </visual>
    <colission>
      <geometry>
         <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </colission>
    <xacro:default_inertial mass="${masa}" altoL="${largo}"/>
  </link>

  <link name="link3">
    <visual>
      <geometry>
        <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </visual>
    <colission>
      <geometry>
         <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </colission>
    <xacro:default_inertial mass="${masa}" altoL="${largo}"/>
  </link>

  <link name="link4">
    <visual>
      <geometry>
        <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </visual>
    <colission>
      <geometry>
         <cylinder radius="${ancho}" length="${largo}"/>
      </geometry>
      <origin xyz="0 0 ${largo/2}" rpy="0 0 0" />
    </colission>
    <xacro:default_inertial mass="${masa}" altoL="${largo}"/>
  </link>
 

  <joint name="joint1" type="continuous">
    <parent link="link0"/>
    <child link="link1"/>
    <origin xyz="0 0 ${altura_base}" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="joint2" type="continuous">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 ${largo}" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint3" type="continuous">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 ${largo}" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint4" type="continuous">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 ${largo}" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </joint>
</robot>


